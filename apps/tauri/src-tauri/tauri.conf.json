{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Claude HUD",
  "version": "0.1.0",
  "identifier": "com.claudehud.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Claude HUD",
        "width": 360,
        "height": 700,
        "minWidth": 280,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "dragDropEnabled": true,
        "acceptFirstMouse": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [],
      "infoPlist": "Info.plist",
      "minimumSystemVersion": "10.13"
    }
  }
}

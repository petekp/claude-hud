{
  "name": "@claude-hud/sdk-bridge",
  "version": "0.1.0",
  "description": "SDK bridge for Claude Code project creation and management",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./project-creator": {
      "import": "./dist/project-creator/index.js",
      "types": "./dist/project-creator/index.d.ts"
    },
    "./sdk-bridge": {
      "import": "./dist/sdk-bridge/index.js",
      "types": "./dist/sdk-bridge/index.d.ts"
    },
    "./state-management": {
      "import": "./dist/state-management/index.js",
      "types": "./dist/state-management/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --testPathPattern=tests/unit",
    "test:integration": "vitest run --testPathPattern=tests/integration",
    "test:e2e": "vitest run --testPathPattern=tests/e2e",
    "lint": "eslint src tests --ext .ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "typescript": "^5.7.0",
    "vitest": "^3.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
